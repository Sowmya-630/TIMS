{
  "name": "tims-backend",
  "version": "1.0.0",
  "description": "Trading Inventory Management System Backend",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --testPathPattern=src/tests",
    "test:watch": "jest --watch --testPathPattern=src/tests",
    "test:coverage": "jest --coverage --testPathPattern=src/tests",
    "migrate": "node src/database/migrate.js",
    "seed": "node src/database/seed.js",
    "setup": "npm run migrate && npm run seed",
    "logs": "tail -f logs/combined.log"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mysql2": "^3.6.5",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "dotenv": "^16.3.1",
    "cron": "^3.1.6",
    "nodemailer": "^6.9.7",
    "multer": "^1.4.5-lts.1",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@types/jest": "^29.5.8"
  },
  "keywords": [
    "inventory",
    "management",
    "trading",
    "nodejs",
    "express",
    "mysql"
  ],
  "author": "TIMS Team",
  "license": "MIT"
}
